<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .chat-message {
            border-bottom: 1px solid #ccc;
            padding: 10px;
        }
        .chat-message:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Chat History</h1>
        <div class="chat-history">
            <% Object.keys(messages).forEach(function(user) { %>
                <h3><%= user %></h3>
                <% messages[user].forEach(function(message) { %>
                    <div class="chat-message">
                        <strong><%= message.user_name %>:</strong> <%= message.message %>
                        <br>
                        <small><%= message.timestamp %></small>
                    </div>
                <% }); %>
            <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        socket.on('chat message', function(msg) {
            const messages = document.querySelector('.chat-history'); // เปลี่ยนจาก getElementById เป็น querySelector
            const messageElement = document.createElement('div');
            messageElement.classList.add('chat-message');
            messageElement.innerHTML = `<strong>${msg.user_name}:</strong> ${msg.message}<br><small>${new Date(msg.timestamp).toLocaleString()}</small>`;
            messages.appendChild(messageElement);
        });
    </script>
</body>
</html>
