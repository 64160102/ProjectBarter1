  <script>
    $(document).ready(function () {
      setTimeout(function () {
        $('.loader').addClass('hidden'); // เพิ่มคลาส hidden เพื่อซ่อนโลโก้
        $('.navbar').removeClass('hidden'); // ลบคลาส hidden เพื่อแสดงแถบนำทาง
      }, 2000); // 3 วินาที (3000 มิลลิวินาที)
    });
  </script>

