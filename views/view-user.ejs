</head>

<body>
  <div class="loader"></div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark hidden">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="/images/Logoo.png" alt="Logo"></a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
       
        </ul>
        
    
        <span class="navbar-text me-3">
            <%= user.name %>
          </span>
          <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container">
        <div class="profile">
            <div class="profile-header">
                <img src="<%= user.profile_image %>" alt="Profile Image" class="profile-img">
                <h2 class="profile-name"><%= user.name %></h2>
                <p class="profile-phone">เบอร์โทร: <%= user.phone %></p>
                <p class="profile-phone">เพศ: <%= user.gender %></p>
                <p class="profile-address">ที่อยู่: <%= user.address_line1 %></p>
                <p class="profile-address">ที่อยู่: <%= user.address_line2 %></p>
            </div>
            <div class="profile-body">
                <h3>รายการสินค้าที่เคยลง</h3>
                <div class="product-list">
                    <% user.products.forEach(function(product) { %>
                        <div class="product-card">
                            <a href="/product/<%= product.id %>">
                                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-img">
                            </a>
                            <div class="product-details">
                                <h4 class="product-name"><%= product.name %></h4>
                                <p class="product-description"><%= product.description %></p>
                                <p class="product-location">Location: <%= product.location %></p>
                                <p class="product-status">สถานะ: <%= product.status %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
    </body>
