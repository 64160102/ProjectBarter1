<style>


.loader {
      width: 48px;
      height: 48px;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 1;
      transition: opacity 1s ease-in-out;
    }

    .loader.hidden {
      opacity: 0;
      pointer-events: none;
    }

    .loader:before {
      content: '';
      width: 48px;
      height: 5px;
      background: #f0808050;
      position: absolute;
      top: 60px;
      left: 0;
      border-radius: 50%;
      animation: shadow324 0.5s linear infinite;
    }

    .loader:after {
      content: '';
      width: 100%;
      height: 100%;
      background: #f08080;
      position: absolute;
      top: 0;
      left: 0;
      border-radius: 4px;
      animation: jump7456 0.5s linear infinite;
    }

    @keyframes jump7456 {
      15% {
        border-bottom-right-radius: 3px;
      }

      25% {
        transform: translateY(9px) rotate(22.5deg);
      }

      50% {
        transform: translateY(18px) scale(1, .9) rotate(45deg);
        border-bottom-right-radius: 40px;
      }

      75% {
        transform: translateY(9px) rotate(67.5deg);
      }

      100% {
        transform: translateY(0) rotate(90deg);
      }
    }

    @keyframes shadow324 {

      0%,
      100% {
        transform: scale(1, 1);
      }

      50% {
        transform: scale(1.2, 1);
      }
    }

    .navbar-brand img {
      height: 100px;
      width: 250px;
    }

    .navbar-nav .nav-link {
      font-size: 1.5rem;
      margin-left: 2rem;
    }

    .navbar-text {
      font-size: 1.5rem;
    }

    .card {
      height: 100%;
      display: flex;
      flex-direction: column;
      transition: transform 0.2s;
    }

    .card:hover {
      transform: scale(1.05);
      cursor: pointer;
    }

    .card-body {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .card-title,
    .card-text {
      font-family: 'Arial', sans-serif;
    }

    .card-text strong {
      color: orange;
    }

    .card-img-top {
      object-fit: cover;
      height: 200px;
    }

    /* Animation to hide and show navbar */
    @keyframes slideDown {
      0% {
        transform: translateY(-100%);
      }
      100% {
        transform: translateY(0);
      }
    }

    .navbar {
      animation: slideDown 1s forwards; /* Keep navbar shown after animation */
    }

    .hidden {
      display: none; /* Hide navbar initially */
    }
    body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.profile {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.profile-header {
    text-align: center;
    padding: 20px;
    border-bottom: 1px solid #e9ecef;
}

.profile-img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #dee2e6;
    margin-bottom: 10px;
}

.profile-name {
    font-size: 1.8rem;
    font-weight: bold;
    margin: 10px 0;
}

.profile-phone, .profile-address {
    font-size: 1.1rem;
    color: #495057;
}

.profile-body {
    padding: 20px;
}

.profile-body h3 {
    font-size: 1.6rem;
    margin-bottom: 20px;
}

.product-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.product-card {
    background-color: #fff;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: calc(33.333% - 20px);
    margin-bottom: 20px;
}

.product-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.product-details {
    padding: 15px;
}

.product-name {
    font-size: 1.4rem;
    margin: 10px 0;
}

.product-description, .product-location, .product-status {
    font-size: 1.1rem;
    color: #495057;
}

</style>




 
    
